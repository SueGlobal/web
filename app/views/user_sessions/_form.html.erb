<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me %>
    <%= label_tag :remember_me, "Remember me for 5 days" %>
  </div>
  <div class="actions">
     <%= submit_tag 'Login' %>
  </div>
<% end -%>
