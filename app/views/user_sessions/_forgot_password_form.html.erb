<%= form_tag password_resets_path, method: :post, id: 'forgot-password-form' do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, nil, {class: 'js-forgot-password-email'} %>
    <%= submit_tag t('.submit'), {class: 'btn js-forgot-password-submit'} %>
  </div>
<% end -%>
