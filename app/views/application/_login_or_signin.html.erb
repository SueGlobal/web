<% if current_user -%>
  <li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= current_user.email %>
     <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to t('.profile'), edit_user_path(current_user.id) %></li>
    <li class="divider"></li>
    <li><%= link_to t('.logout'), :logout %></li>
  </ul>
  </li>

<% else -%>
  <li>
  <%= link_to t('.register'), new_user_path %>
  </li>
  <li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
     <%= t('.login') %>
  </a>
  <div class="dropdown-menu">
    <%= render partial: 'user_sessions/form',
               locals: { display_errors: false } %>
  </div>
  </li>
<% end -%>
