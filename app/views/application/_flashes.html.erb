<% unless flash[:notice].blank? -%>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= flash[:notice] %>
  </div>
<% end -%>

<% unless flash[:error].blank? -%>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= flash[:error] %>
  </div>
<% end -%>

<% unless flash[:alert].blank? -%>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= flash[:alert] %>
  </div>
<% end -%>
