<%= form_for(@path) do |f| %>
  <% if @general_frame.errors.any? %>
    <div id="error_explanation">
      <h2><%= t '.errors_header', count: @general_frame.errors.count %></h2>

      <ul>
      <% @general_frame.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="explanation"><%= t('.explanation') %></div>

  <div class="field">
     <%= f.label :year %>
     <%= f.select :year, @university.miss_general_frame_academic_years_for_select %>
  </div>

  <%= optional_numeric_field_for :number_of_campus, f %>

  <fieldset class="graduates">
    <legend><%= t '.graduates_legend' %></legend>

    <% [:degree_graduates, :bachelors_degree_graduates, :graduates,
        :master_graduates, :phd_graduates, :specific_qualifications_graduates].each do |field| -%>
      <%= optional_numeric_field_for field, f %>
    <% end -%>
  </fieldset>

  <fieldset class="qualifications">
    <legend><%= t '.qualifications_legend' %></legend>
    <% [:number_of_qualifications, :number_of_masters_degree,
        :number_of_phds, :number_of_specific_qualifications].each do |field| -%>
      <%= optional_numeric_field_for field, f -%>
    <% end -%>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
