<%= form_for(@path) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= t '.errors_header', count: @service.errors.count %></h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :dependency %>
    <%= f.text_field :dependency %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
