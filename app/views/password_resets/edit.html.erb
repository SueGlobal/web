<h1><%= t '.header' %></h1>
<%= form_for @user, url: password_reset_path(@user.reset_password_token), html: {method: :put} do |f| %>
  <% if @user.errors.any? -%>
    <div id="error_explanation">
      <h2><%= t '.errors_header', count: @user.errors.size %></h2>
    	<ul>
      <% @user.erros.full_messages.each do |msg| -%>
        <li><%= msg %></li>
      <% end -%>
    	</ul>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label :email %><br>
    <%= @user.email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
    <%= hidden_field_tag :token, @token %>
  </div>
  <div class="actions">
      <%= f.submit t('.submit'), class: 'js-reset-password' %>
  </div>
<% end -%>
